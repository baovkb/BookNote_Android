<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:paddingHorizontal="5dp">

    <TextView
        android:id="@+id/label_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_floating_btn"
        android:gravity="center"
        android:minWidth="50dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:text="test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/label_item_delete"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_action_delete_x"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@id/label_item_tv"
        app:layout_constraintTop_toTopOf="@id/label_item_tv"
        android:layout_marginEnd="-7dp"
        android:layout_marginTop="-7dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/label_item_delete"
        app:layout_constraintBottom_toBottomOf="@+id/label_item_tv"
        app:layout_constraintEnd_toEndOf="@+id/label_item_delete"
        app:layout_constraintStart_toStartOf="@+id/label_item_tv">

    </View>

</androidx.constraintlayout.widget.ConstraintLayout>
